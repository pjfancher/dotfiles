# NAVIGATION
# #########################################
alias ..="cd .."
alias cd..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# LS ALIASES
# #########################################
alias l='ls -lFh'
alias ll='ls -alFh'
alias la='ls -lah'

# GREP
# #########################################
alias grep='grep --color=auto'
alias hg='history | grep'
alias gh='history | grep'

# SUDO (makes other aliases available to sudo)
# #########################################
alias sudo='sudo '

# SOURCE FILES
# #########################################
alias bashrc='source $HOME/.bashrc'
alias zshrc='source $HOME/.zshrc'

# GIT ALIASES
# #########################################
alias gb='git branch'
alias gs='git status'
alias gl='git log --pretty=format:"%C(yellow)%h %ad%Cred%d %Creset%s%Cblue [%cn]" --decorate --date=relative'
#alias gl="git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit"
alias gll='git log --pretty=format:"%C(yellow)%h%Cred%d %Creset%s%Cblue [%cn]" --decorate --numstat'
alias gma='git commit -am'
alias gm='git commit -m'
alias gc='git checkout'
alias gcm='git checkout master'
alias ga='git add -A .'
alias grm='git rm $(git ls-files --deleted)  '
# Push Master
alias gpm='git push origin master'
# Pull Master
alias gplm='git pull origin master'
# Alias current branch
alias current-branch='git rev-parse --abbrev-ref HEAD'
# Push Current Branch
alias gpb='git push origin $(current-branch)'
# Pull Current Branch
alias gplb='git pull origin $(current-branch)'

